<article>
	<% if notice %>
		<aside id="notice"><%= notice %></aside>
	<% end %>

	<h2>Your Cart</h2>
	<table>
		<%= render(@cart.line_items) %>

			<tfoot>
			<tr>
				<th colspan="2">Total</td>
				<td class="price"><%= number_to_currency(@cart.total) %></td>
			</tr>
		</tfoot>
	</table>
<div class="actions">
	<%= button_to 'Empy Cart', @cart, method: :delete, data: { confirm: 'Are you sure you want to delete'}%>
	<%= button_to 'Checkout', new_order_path, method: :get, class: 'checkout' %>
</div>
</article>